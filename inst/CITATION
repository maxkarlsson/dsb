  journal  = "Nature Communications",
  year     = 2022,
  doi      = "10.1038/s41467-022-29356-8",
  url      = "https://www.nature.com/articles/s41467-022-29356-8",
  textVersion = paste(
  "Mulè and Martins et al. Normalizing and denoising protein expression data from droplet-based single cell profiling. Nature Communications (2022)"
  )
)
